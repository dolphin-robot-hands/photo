  <%= f.radio_button :gallery, 'night' %>
  <%= f.label :gallery, 'night', :value => 'night' %>
  <%= f.radio_button :gallery, 'adventure' %>
  <%= f.label :gallery, 'adventure', :value => 'adventure' %>


  <div class="field">
    <%= f.label :file %>
    <%= f.file_field :file, class:'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class:'btn btn-default'%>
  </div>
<% end %>
